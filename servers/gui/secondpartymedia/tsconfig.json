{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
		"baseUrl": "src",
		"paths": {
			"@shared/*": ["app/shared/*"],
			"@pages/*": ["app/pages/*"],
			"@angular/*": ["../node_modules/@angular/*"]
		}
  },
	"include": ["src/**/*", "node_modules/amc-common-components/**/*"],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
